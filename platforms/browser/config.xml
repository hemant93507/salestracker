<?xml version='1.0' encoding='utf-8'?>
<widget id="com.techstreet.salestracker" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>SalesTracker</name>
    <description>
        A sales person tracking app.
    </description>
    <author email="info@techstreet.in" href="http://techstreet.in">
        Techstreet Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
    <icon src="icon.png" />
    <splash src="splash.png" />
    <preference name="phonegap-version" value="cli-8.1.1" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarBackgroundColor" value="#A9A9A9" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
